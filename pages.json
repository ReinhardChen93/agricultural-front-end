			"path": "pages/index/index",
			"style": {
				"app-plus":{
					"titleNView": {
						"titleText": "",
						"background": "#6182FA"
					}
					
				},
				"h5": {
					"titleNView": {
						
						"titleText": "",
						"backgroundColor": "#6182FA"
					}
				}
			}
		}
	    ,{
            "path" : "pages/shop/shop",
            "style" : {}
        }
        ,{
            "path" : "pages/my/my",
            "style" : {}
